<Window x:Class="eZet.Eve.EveProfiteer.Views.ScannerLinkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IGB Market Scanner Link" Height="300" Width="600">
    <DockPanel Margin="30" LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="20" Content="Copy to clipboard" Name="Copy" Click="Copy_OnClick" MaxWidth="200"/>
            <Button Margin="20" Content="Close" Name="Close" Click="Copy_OnClick" MaxWidth="200"/>
        </StackPanel>

        <TextBox Name="Link" Text="{Binding Uri, Mode=OneWay}" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
    </DockPanel>
</Window>
